{
    "extends": "@tsconfig/node20/tsconfig.json",
    "compilerOptions": {
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "module": "Node16",
        "types": ["node"],
        "strictNullChecks": true,
        "strict": true,
        "plugins": [
            { "transform": "typescript-transform-paths" },
            {
                "transform": "typescript-transform-paths",
                "afterDeclarations": true
            },
            {
                "transform": "typia/lib/transform"
            }
        ]
    }
}
