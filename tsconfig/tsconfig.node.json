{
    "extends": "@tsconfig/node20/tsconfig.json",
    "compilerOptions": {
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "types": ["node"],
        "strictNullChecks": true,
        "strict": true,
        "verbatimModuleSyntax": true,
        "plugins": [
            {
                "transform": "typia/lib/transform"
            }
        ]
    }
}
