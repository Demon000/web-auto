{
  "extends": "@tsconfig/node20/tsconfig.json",
  "include": [
    "vite.config.ts",
    "package.json",
    "electron/**/*",
    "shared/**/*"
  ],
  "compilerOptions": {
    "composite": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "types": ["node"],
    "paths": {
      "@electron/*": ["./electron/*"],
      "@shared/*": ["./shared/*"]
    }
  }
}
